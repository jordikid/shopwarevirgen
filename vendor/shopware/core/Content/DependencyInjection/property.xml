<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="Shopware\Core\Content\Property\PropertyGroupDefinition">
            <tag name="shopware.entity.definition" entity="property_group"/>
        </service>

        <service id="Shopware\Core\Content\Property\Aggregate\PropertyGroupOption\PropertyGroupOptionDefinition">
            <tag name="shopware.entity.definition" entity="property_group_option"/>
        </service>

        <service id="Shopware\Core\Content\Property\Aggregate\PropertyGroupOptionTranslation\PropertyGroupOptionTranslationDefinition">
            <tag name="shopware.entity.definition" entity="property_group_option_translation"/>
        </service>

        <service id="Shopware\Core\Content\Property\Aggregate\PropertyGroupTranslation\PropertyGroupTranslationDefinition">
            <tag name="shopware.entity.definition" entity="property_group_translation"/>
        </service>

    </services>
</container>                
                